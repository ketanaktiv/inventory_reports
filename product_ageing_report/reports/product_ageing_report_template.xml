<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="product_ageing">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <t t-set="doc" t-value="doc.with_context()"/>
                    <div class="page">
                        <div class="oe_structure"/>
                        <div class="mt32 mb32">
                            <h3 style="text-align:center;">Product Ageing Report</h3>
                        </div>
                        <div class="row">
                            <div class="col-xs-3">
                                <p><strong>From Date:  </strong><t t-esc="doc.start_date"/></p>
                            </div>
                            <div t-if="doc.warehouse_id" class="col-xs-6 col-xs-offset-3">
                                <p><strong>Warehouse:</strong><t t-esc="doc.warehouse_id.name"/></p>
                            </div>
                            <div t-if="doc.location_id" class="col-xs-6 col-xs-offset-3">
                                <p><strong>Location:</strong><t t-esc="doc.location_id.name"/></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-5">
                                <p><strong>To Date:  </strong><t t-esc="doc.end_date"/></p>
                            </div>
                        </div>
                        <t t-set="product_data" t-value="doc.get_product_last_month_data()"/>
                        <table class="table table-striped">
                            <thead style="display: table-header-group">
                                <tr>
                                    <th>Product</th>
                                    <th>Product Code</th>
                                    <th>Onhand Quantity</th>
                                    <th>Last Sold Date</th>
                                    <th>Last Sold Qty</th>
                                    <th>Total Sold Qty</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="product_data" t-as="data">
                                    <tr style="page-break-inside: avoid">
                                        <td class="text-left"><t t-esc="data['product_id'].code"/></td>
                                        <td class="text-left"><t t-esc="data['product_id'].name"/></td>
                                        <td class="text-center"><t t-esc="data['product_id'].qty_available"/></td>
                                        <td class="text-center"><t t-esc="data['last_sale_date']"/></td>
                                        <td class="text-center"><t t-esc="data['quantity']"/></td>
                                        <td class="text-center"><t t-esc="data['sale_quantity']"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
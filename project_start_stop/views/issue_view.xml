<?xml version="1.0"?>
<odoo>
    <data>
        <record id="wk_time_log_in_issue_treeview" model="ir.ui.view">
            <field name="name">Project.Issue.Tree</field>
            <field name="model">project.issue</field>
            <field name="inherit_id" ref="project_issue.project_issue_tree_view"/>
            <field name="arch" type="xml">
                <field name="user_id" position="after">
                    <field name="create_uid" string="Created By"/>
                </field>
                <field name="create_uid" position="after">
                    <field name="log_action" string="Working Status" />
                    <button name="issue_start" type="object" string="Start Now" icon="fa-youtube-play fa-2x text-success" attrs="{'invisible': [('log_action', 'in', ['working','closed'])]}" />
                    <button name="issue_stop" type="object" string="Stop Now" icon="fa-stop-circle fa-2x text-danger" attrs="{'invisible': [('log_action', 'in', ['closed','not_working'])]}" />
                </field>
            </field>
        </record>

        <record id="wk_emp_work_type_change_project_issue_formview" model="ir.ui.view">
            <field name="name">Issue Work Type</field>
            <field name="model">project.issue</field>
            <field name="inherit_id" ref="project_issue.project_issue_form_view"/>
            <field name="arch" type="xml"> 
                <field name="user_id" position="replace">
                    <field name="user_id" attrs="{'readonly':[('id','!=',False)]}" options="{'no_create_edit': True, 'no_open': True}" class="oe_inline"/>
                    <field name="log_action" invisible="1"/>
                    <label for="issue_start" string="Working Status" attrs="{'invisible': [('log_action', 'in', ['working','closed'])]}" />
                    <button name="issue_start" string="Start Now" type="object" class="fa fa-youtube-play text-success" attrs="{'invisible': [('log_action', 'in', ['working','closed'])]}" />
                    <label for="issue_stop" string="Working Status" attrs="{'invisible': [('log_action', 'in', ['closed','not_working'])]}" />
                    <button
                                name="issue_stop"
                                string="Stop Now"
                                type="object"
                                class="fa fa-stop-circle text-danger"
                                attrs="{'invisible': [('log_action', 'in', ['closed','not_working'])]}"
                                help="To change assigned person, you must have stop this issue first."/>
				</field>
                <xpath expr="//page[@name='extra_info']" position="inside">
                    <group col="3">
                        <field name="last_start_time" readonly="1"/>
                        <button name="get_issue_time_duration" string="Check Total Spent Time" type="object" help="Shows total time spent by employee on this issue." class="oe_highlight" groups="wk_employee_work_report.work_report_manager_group"/>
                    </group>
                </xpath>
                <field name='user_id' position="attributes">
                    <attribute name="attrs">{'readonly': [('log_action', '=', 'working')]}</attribute>
                </field>
            </field>
        </record>
        <record id="wk_emp_work_type_filter_in_project_issue_formview" model="ir.ui.view">
            <field name="name">
                Work Type Filter
            </field>
            <field name="model">project.issue</field>
            <field name="inherit_id" ref="project_issue.view_project_issue_filter"/>
            <field name="arch" type="xml">
                <xpath expr='//search//field[@name="user_id"]' position='after'>
                    <field name="log_action" string="Working Status"/>
                </xpath>
                <filter name="unassigned" position="after">
                    <filter string="Working Status" name="log_action" icon="terp-personal" domain="[]" context="{'group_by':'log_action'}"/>
                </filter>
            </field>
        </record>

        <record id="project_issue_form_view" model="ir.ui.view">
            <field name="name">project.issue.form.inherited</field>
            <field name="model">project.issue</field>
            <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
            <field name="inherit_id" ref="project_issue.project_issue_form_view" />
            <field name="arch" type="xml">
                <field name="task_id"  position="after">
                    <field name="progress" widget="progressbar" attrs="{'invisible':[('task_id','=',False)]}" class="oe_inline"/>
                </field>
                <field name="timesheet_ids" position="replace">
                    <field name="timesheet_ids" colspan="4" nolabel="1" context="{'default_user_id' : uid, 'default_project_id': project_id}"
                            groups="base.group_user" readonly="1">
                        <tree editable="bottom" string="Timesheet Activities" default_order="id desc">
                            <field name="date"/>
                            <field name="user_id" required="1"/>
                            <field name="name"/>
                            <field name="unit_amount" string="Duration" widget="float_time"/>
                            <field name="project_id" invisible="1"/>
                        </tree>
                        <form string="Issue Work Log"  create="false" edit="false" delete="false">
                            <sheet>
                                <group col="4">
                                    <field name="issue_id"/>
                                    <field name="start_time"/>
                                    <field name="stop_time"/>
                                    <field name="hours" string="Total Time"/>
                                    <field name="user_id"/>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </field>
            </field>
        </record>

        <record id="wk_time_log_view_issue_kanban" model="ir.ui.view">
             <field name="name">Project.Issue.Tree</field>
             <field name="model">project.issue</field>
             <field name="inherit_id" ref="project_issue.project_issue_view_kanban_inherit_no_group_create"/>
             <field name="arch" type="xml">
                 <templates position="before">
                    <field name="log_action" />
                </templates>
                <xpath expr="//div[hasclass('oe_kanban_bottom_left')]" position="inside">
                <t t-if="record.log_action.raw_value == 'not_working'">
                    <button name="issue_start" type="object" string="Start Now" class="fa fa-youtube-play fa-2x text-success"/>
                </t>
                <t t-if="record.log_action.raw_value == 'working'">
                    <button name="issue_stop" type="object" string="Stop Now" class="fa fa-stop-circle fa-2x text-danger"  />
                </t>
                </xpath>
             </field>
         </record>

        <record id="project_issue.project_issue_categ_act0" model="ir.actions.act_window">
            <field name="name">Issues</field>
            <field name="res_model">project.issue</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,calendar,form,pivot,graph</field>
            <field name="view_id" eval="False"/>
            <field name="domain" eval="[('log_action','!=','closed')]"/>
            <field name="context">{'search_default_my_issues': 1}</field>
            <field name="search_view_id" ref="project_issue.view_project_issue_filter"/>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('project_issue.project_issue_tree_view')}),
                          (0, 0, {'view_mode': 'kanban', 'view_id': ref('project_issue.project_issue_view_kanban_inherit_no_group_create')}),
                          (0, 0, {'view_mode': 'calendar', 'view_id': ref('project_issue.project_issue_calendar_view')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('project_issue.project_issue_form_view')}),
                          (0, 0, {'view_mode': 'graph', 'view_id': ref('project_issue.project_issue_graph_view')}),
                          ]"/>
            <field name="help" type="html">
                <p>
                    The Odoo issues tracker allows you to efficiently manage things
                    like internal requests, software development bugs, customer
                    complaints, project troubles, material breakdowns, etc.
                </p>
            </field>
        </record>

         <record model="ir.actions.act_window" id="webkul_completed_issue_action">
            <field name="name">Completed Issues</field>
            <field name="res_model">project.issue</field>
            <field name="view_type">form</field>
            <field name="context">{'search_default_my_issues': 1}</field>
            <field name="domain">[('log_action','=','closed')]</field>
            <field name="search_view_id" ref="project_issue.view_project_issue_filter"/>
        </record>
                <menuitem id="wk_daily_time_log_menu2" action="wk_issue_work_log_action" parent="wk_daily_report_sub_main_menu3" name="Issues Summary" sequence="2" />
                <menuitem id="project_complete_issue" parent="project.menu_project_management" name="Completed Issues" sequence="16" groups="project.group_project_user" action="webkul_completed_issue_action" />


    </data>
</odoo>
